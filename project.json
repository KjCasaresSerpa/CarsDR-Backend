{
    "tools": {
      "dotnet": {
        "package": "dotnet-sdk",
        "version": "8.0"
      }
    },
    "extensions": {
      "idx-debugger": {
        "enabled": true,
        "launch": {
          "configurations": [
            {
              "name": "Launch API",
              "type": "coreclr",
              "request": "launch",
              "preLaunchTask": "build",
              "program": "${workspaceFolder}/bin/Debug/net8.0/CarSpot.WebApi.dll",
              "args": [],
              "cwd": "${workspaceFolder}",
              "stopAtEntry": false,
              "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
              },
              "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
              }
            }
          ]
        }
      }
    }
  }